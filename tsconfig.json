{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2015",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  },
  // "exclude": ["/node_modules/**/*"],
  "include": ["assets", "assets/extensions"],
  "moduleResolution": ["node_modules", "node"]
}
